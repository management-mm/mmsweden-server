{
  "plugins": [
    "@trivago/prettier-plugin-sort-imports"
  ],
  "importOrder": ["^@/(.*)$", "^~/(.*)$", "^[./]"],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "printWidth": 80,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "trailingComma": "es5",
  "bracketSpacing": true,
  "jsxBracketSameLine": false,
  "arrowParens": "avoid",
  "proseWrap": "always",
  "importOrderParserPlugins": [
    "typescript",
    "decorators-legacy"
  ]
}